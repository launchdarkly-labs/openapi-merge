{
  "name": "@launchdarkly/openapi-merge-cli",
  "version": "1.3.3",
  "description": "A cli tool for the openapi-merge library. Forked from https://github.com/robertmassaioli/openapi-merge",
  "keywords": [
    "openapi",
    "merge",
    "cli"
  ],
  "main": "dist/index",
  "bin": "dist/cli.js",
  "files": [
    "dist/!(__tests__)",
    "dist/!(__tests__)/**/*"
  ],
  "author": "LaunchDarkly",
  "license": "MIT",
  "homepage": "https://github.com/launchdarkly-labs/openapi-merge",
  "repository": "github:launchdarkly-labs/openapi-merge",
  "bugs": {
    "url": "https://github.com/launchdarkly-labs/openapi-merge/issues"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^6",
    "@eslint/js": "^9.33.0",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "globals": "^15.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^5.9.2",
    "typescript-json-schema": "^0.50.1"
  },
  "dependencies": {
    "@launchdarkly/openapi-merge": "workspace:*",
    "ajv": "^6.12.2",
    "commander": "^5.1.0",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "^3",
    "js-yaml": "^3.14.0"
  },
  "scripts": {
    "build": "tsc --project .",
    "prepare": "yarn run gen-schema && tsc --project .",
    "prepublishOnly": "yarn run gen-schema && tsc --project .",
    "gen-schema": "typescript-json-schema src/data.ts Configuration --titles --refs --aliasRefs --noExtraProps --required --strictNullChecks --tsNodeRegister -o src/configuration.schema.json && ts-node --project tsconfig.json ./src/fix-schema.ts",
    "start": "ts-node --project ./tsconfig.json ./src/cli.ts",
    "lint": "eslint src --fix",
    "gen-docs": "jsonschema2md --input=src"
  }
}
